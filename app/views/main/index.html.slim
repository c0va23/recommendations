- @ngApp ="RecommendationsApplication"

= content_for :head do
  = stylesheet_link_tag 'main/application', media: 'all'
  = javascript_include_tag 'main/application'
  script src="https://platform.twitter.com/widgets.js" async="true"
  meta name="fragment" content="!"
  base href=main_path

= content_for :navbar do
  li: a href=main_path("things") translate="things.index.title"
  li: a href=main_path("things/recommended") translate="things.recommended.title"
  li: a href=main_path("things/unchecked") translate="things.unchecked.title"
  li: a href=main_path("things/checked") translate="things.checked.title"
  li: a href=main_path("things/new") translate="things.new.title"

- content_for :navbar_right do
  li.dropdown ng-controller="TranslationController"
    a.dropdown-toggle.btn.btn-link data-toggle="dropdown"
      | {{currentLocale}}
      b.caret
    ul.dropdown-menu
      - I18n.available_locales.each do |locale|
        li: a ng-click="setLocale('#{locale}')" = locale

div ng-view=true
